<div class="flex flex-wrap justify-center">
	<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
		{% for card in cards %}
			<div class="max-w-sm mx-5 mt-8 mb-4">
				<div class="back-image-home bg-white rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
					<a href="{{ path('app_item_create', {'cardId' : card.id})}}">
						<div class="overflow-hidden aspect-square bg-lightgrey flex items-center justify-center">
							{% if card.pictureProduct is defined and card.pictureProduct is not empty %}
								<img class="image-home image rounded-t-lg object-cover" src="{{ asset('uploads/pictureProduct/') ~ card.pictureProduct }}" alt="Product Image">
							{% else %}
								<img class="image rounded-t-lg object-cover" src="{{ asset('build/images/placeholder.png')}}" alt="Placeholder Image">
							{% endif %}
						</div>
					</a>
				</div>
				<div class="text-center mt-6">
					<div class="text-sm text-grey">{{ card.category }}</div>
					<div class="text-lg font-semibold">{{ card.title }}</div>
				</div>
			</div>
		{% endfor %}
	</div>
</diV>
