<div class="flex flex-wrap justify-start">
    {% for card in cards %}
    <div class="max-w-sm mx-5 mt-8 mb-4">
        <div class="bg-white rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
            <a href="{{ path('app_details', {'id' : card.id})}}">
            <div class="overflow-hidden object-cover aspect-square bg-lightgrey">
                <img class="image rounded-t-lg object-cover" src="{{ asset('build/images/placeholder.png')}}" alt="image"/>
            </div>
            </a>
        </div>
        <div class="text-center mt-6">
            <div class="text-sm text-grey">{{ card.category }}</div>
            <div class="text-lg font-semibold">{{ card.title }}</div>
        </div>
    </div>
    {% endfor %}
</div>

