{% extends 'base.html.twig' %}

{% block title %}NOUVEAU MOT DE PASSE{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

	<section class='h-full bg-darkblue'>
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <a href="#" class="flex items-center mb-4 text-2xl font-semibold text-gray-900 dark:text-white">
          <img class="w-16 h-16 mr-2" src="{{ asset('build/images/ISF.svg')}}" alt="logo">
      </a>
      <div class="w-full p-6 rounded-lg md:mt-0 sm:max-w-md dark:bg-gray-800 sm:p-8">
          <h2 class="mb-4 text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
              Réinitaliser votre mot de passe 
          </h2>
          <p class="text-white mb-4 text-xs">Un lien pour réinitialiser votre mot de passe vous sera envoyé sur votre adresse mail</p>
            {{ form_start(requestForm) }}
              <div class="text-white">
                    {{ form_row(requestForm.email) }}              
                </div>
              <div>
              <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input id="newsletter" aria-describedby="newsletter" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800" required="">
                  </div>
                  <div class="ml-3 text-sm">
                    <label for="newsletter" class="font-light text-white dark:text-gray-300">J'accepte <a class="font-medium text-primary-600 hover:underline dark:text-primary-500" href="#">les termes et les conditions</a></label>
                  </div>
              </div>
              <button type="submit" class="w-full mt-6 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Réinitialiser</button>
                <div class="mt-6 flex items-center justify-end gap-x-6">
					<button type="button" class="text-sm font-semibold leading-6 text-white" onclick="retourAccueil()">Retour</button>
				</div>
    {{ form_end(requestForm) }}
      </div>
  </div>
</section>


	<script>
		function retourAccueil() { // Redirige l'utilisateur vers la page d'accueil
window.location.href = '/';
}
	</script>

{% endblock %}
